{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@scrypted/sdk/storage-settings": ["node_modules/@scrypted/sdk/dist/src/storage-settings"],
      "@scrypted/sdk/settings-mixin": ["node_modules/@scrypted/sdk/dist/src/settings-mixin"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
